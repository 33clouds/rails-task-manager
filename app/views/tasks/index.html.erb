<h2>My tasks</h2>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="p-1">
      <% if task.completed %>
        <i class="fa-regular fa-square-check me-2"></i>
      <% else %>
        <i class="fa-regular fa-square me-2"></i>
      <% end %>

      <%= link_to task.title, task_path(task.id), class: "text-decoration-none" %>

      <%= link_to raw('<i class="fa-solid fa-trash-can ms-2 fw-lighter"></i>'),
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
        class: "link-dark"
      %>
    </li>
  <% end %>
</ul>

<div class="border-top pt-3">
  <%= link_to raw('<i class="fa-solid fa-plus me-1"></i> Add a new task'), new_task_path(@task), class: "text-decoration-none" %>
</div>
