<div class="d-flex flex-row align-items-center">

  <h2 class="flex-grow-1"><%= @task.title %></h2>

  <%= link_to raw('<i class="fa-solid fa-pencil me-1"></i> Edit this task'), edit_task_path(@task), class: "btn btn-outline-secondary"%>

</div>

<div class="bg-light my-3 p-3 border">
  <p class="my-0"><%= @task.details %></p>
</div>

<p>
  <% if @task.completed %>
    <i class="fa-regular fa-square-check me-1"></i> Completed
  <% else %>
    <i class="fa-regular fa-square me-1"></i> This task is not done yet
  <% end %>
</p>

<div class="border-top pt-3">
  <%= render "back_to_tasks" %>
</div>
